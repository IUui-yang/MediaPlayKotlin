<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linerLayouthead02"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonbar_area">
        <!--底部布局-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/buttonbar_icon_setup_n" />

        <ImageView
            android:id="@+id/buttonbar_icon_id3_n"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/listselector"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/buttonbar_icon_id3_n" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/buttonbar_icon_list_n" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/buttonbar_icon_eq_n" />
    </LinearLayout>
</LinearLayout>